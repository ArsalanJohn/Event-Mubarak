<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddCompany">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="10dp"

                >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-condensed-light"
android:layout_gravity="center"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:id="@+id/company_name_add"
                android:textSize="15sp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-light"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Company Address"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Address"
                android:id="@+id/company_address_add"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed-light"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Company Contact"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Contact Number"
                android:id="@+id/company_num"
                android:textSize="15sp"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed-light"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Company Owner"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Owner"
                android:id="@+id/company_owner_add"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed-light"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Company Type"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="since 2001"
                android:id="@+id/company_type_spinner"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-condensed-light"

                android:ellipsize="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Established"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="since 2001"
                android:id="@+id/company_established_add"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-condensed-light"
                android:inputType="number"

                android:ellipsize="end"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Starting
                   from"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center"

                android:layout_weight="0.1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rs 25000/-"
                android:id="@+id/company_startPrice_add"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:inputType="number"
                android:fontFamily="sans-serif-condensed-light"

                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>




<android.support.v7.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:elevation="5dp"
app:cardMaxElevation="5dp"
app:cardElevation="5dp"
android:layout_marginBottom="10dp"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Images"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-light"
android:id="@+id/selImgTxt"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addedcompanyimages"
        android:layout_margin="10dp"

        >

    </android.support.v7.widget.RecyclerView>



</LinearLayout>


</android.support.v7.widget.CardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_company_btn"
                android:text="Add"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed-light"

                />

    </LinearLayout>
    </ScrollView>


    </FrameLayout>