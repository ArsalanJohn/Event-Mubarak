<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".Fragments.DetailsFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:elevation="5dp"
           app:cardMaxElevation="5dp"
           app:cardElevation="5dp"
           android:layout_marginBottom="10dp"

           >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_margin="10dp"

           >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Company Information"
               android:textSize="15sp"
               android:textColor="#000000"
               android:textStyle="bold"
               android:layout_margin="10dp"
               android:fontFamily="sans-serif-condensed-light"

               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_margin="10dp"

               >
               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:text="Company Name"
                   android:textSize="15sp"
                   android:textColor="#000000"
                   android:layout_weight="0.1"
                   android:fontFamily="sans-serif-condensed-light"

                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Company Name"
                   android:layout_marginLeft="5dp"
                   android:ellipsize="end"
                   android:id="@+id/company_name_de"
                   android:textSize="15sp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-light"

                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_margin="10dp"

               >
               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:text="Company Address"
                   android:textSize="15sp"
                   android:textColor="#000000"
                   android:layout_weight="0.1"
                   android:fontFamily="sans-serif-condensed-light"

                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Company Address"
                   android:id="@+id/company_address_de"
                   android:textSize="15sp"
                   android:layout_weight="1"
                   android:layout_marginLeft="5dp"
                   android:ellipsize="end"
                   android:fontFamily="sans-serif-condensed-light"

                   />
           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_margin="10dp"

               >
               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:text="Company Owner"
                   android:textSize="15sp"
                   android:textColor="#000000"
                   android:layout_weight="0.1"
                   android:fontFamily="sans-serif-condensed-light"

                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Company Owner"
                   android:id="@+id/company_owner_de"
                   android:textSize="15sp"
                   android:layout_weight="1"
                   android:layout_marginLeft="5dp"
                   android:ellipsize="end"
                   android:fontFamily="sans-serif-condensed-light"

                   />
           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_margin="10dp"

               >
               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:text="Established"
                   android:textSize="15sp"
                   android:textColor="#000000"
                   android:layout_weight="0.1"
                   android:fontFamily="sans-serif-condensed-light"

                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="since 2001"
                   android:id="@+id/company_established_de"
                   android:textSize="15sp"
                   android:layout_weight="1"
                   android:layout_marginLeft="5dp"
                   android:fontFamily="sans-serif-condensed-light"

                   android:ellipsize="end"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_margin="10dp"

               >
               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:text="Starting
                   from"
                   android:textSize="15sp"
                   android:textColor="#000000"
                   android:fontFamily="sans-serif-condensed-light"

                   android:layout_weight="0.1"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Rs 25000/-"
                   android:id="@+id/company_startPrice_de"
                   android:textSize="15sp"
                   android:layout_weight="1"
                   android:layout_marginLeft="5dp"
                   android:ellipsize="end"
                   android:fontFamily="sans-serif-condensed-light"

                   />
           </LinearLayout>

       </LinearLayout>
       </android.support.v7.widget.CardView>




       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:elevation="5dp"
           app:cardMaxElevation="5dp"
           app:cardElevation="5dp"
           android:layout_marginBottom="10dp"

           >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Images"
               android:textSize="15sp"
               android:textColor="#000000"
               android:textStyle="bold"
               android:layout_margin="10dp"
               android:fontFamily="sans-serif-condensed-light"

               />

           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/companyimages"
               android:layout_margin="10dp"

               >

           </android.support.v7.widget.RecyclerView>



       </LinearLayout>


       </android.support.v7.widget.CardView>



   </LinearLayout>
</ScrollView>
</FrameLayout>